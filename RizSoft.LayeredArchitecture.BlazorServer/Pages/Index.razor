@page "/"

<PageTitle>Index</PageTitle>



<div class="text-center">
    <h1>A sample of Layered Architecture</h1>
</div>
<h2 class="my-3">Northwind's Employee List</h2>

@if (Employees != null)
{
    <table class="table border">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        @foreach (var emp in Employees)
        {
            <tr>
                <td>@emp.EmployeeId</td>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
            </tr>
        }
    </table>


    <h2>Sample of multiple calls to DbContextFactory</h2>
    <div class="row">
    @foreach (var emp in Employees)
    {
        <div class="m-2 col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-2">
        <EmployeeCard EmployeeId="@emp.EmployeeId"></EmployeeCard>
        </div>
    }
    </div>
}
else
{
    <p>Loading...</p>
}