
@if (Employee != null)
{
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Employee.PhotoPath" alt="@Employee.FirstName">
        <div class="card-body">
            <h5 class="card-title">@String.Format("{0} {1}",Employee.FirstName, Employee.LastName) </h5>
            <p class="card-text">@Employee.Notes</p>
        </div>
    </div>
}

